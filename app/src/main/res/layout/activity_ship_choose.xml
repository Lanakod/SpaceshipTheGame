<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stars"
    tools:context=".ShipChoose">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/greenShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:onClick="changeShip"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_green" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/darkblueShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_darkblue" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/yellowShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_yellow" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/blueShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_blue" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/purpleShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_purple" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/redShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_red" />

        <ImageView
            android:onClick="changeShip"
            android:id="@+id/orangeShip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionForShips"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceship_orange" />
    </LinearLayout>
</HorizontalScrollView>